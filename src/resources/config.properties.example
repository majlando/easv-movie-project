# Private Movie Collection - Database Configuration
# MS SQL Server Connection Settings

# Database Server
db.server=ip
db.port=port

# Database Name
db.database=db

# Create database automatically if it does not exist
db.autoCreate=true

# Authentication
db.username=user
db.password=pw

# Connection Settings
db.timeout=30
db.encrypt=false
db.trustServerCertificate=true

# Application Settings
app.name=Private Movie Collection
app.version=1.0.0
movies.folder=src/resources/movies

